---
import BaseHead from "@components/BaseHead.astro";

export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  darkBg?: boolean;
}
const { title, ogImage, description, darkBg } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} image={ogImage} description={description} />
    <script>
      import "@utils/sentry";
    </script>
  </head>
  <body>
    <slot />

    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      html,
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
      }
    </style>
  </body>
</html>
